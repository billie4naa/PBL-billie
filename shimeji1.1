<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PurpleLink Simulator</title>
    <style>
        #shimeji {
            position: absolute;
            bottom: 10px;
            left: 10px;
            cursor: pointer; /* Menunjukkan bahwa karakter dapat diklik */
        }
    </style>
</head>
<body>
    <div id="chat-container">
        <!-- Chat messages go here -->
    </div>
    <img id="shimeji" src="path/to/shimeji.png" alt="Shimeji Character">

    <script>
        const shimeji = document.getElementById('shimeji');

        // Fungsi untuk menampilkan bantuan
        function showHelp() {
            alert("Halo! Saya Shimeji. Apa yang bisa saya bantu? Anda bisa bertanya tentang fitur aplikasi ini.");
        }

        // Menambahkan event listener untuk klik pada karakter Shimeji
        shimeji.addEventListener('click', showHelp);
    </script>
</body>
</html>
